            </a>
        </div>*@

    <br>
    <div class="row ">
        <div class="right-sidebar col-md-8">
            <div class="row">
                <div class="mb-post-wrap grid right-sidebar ">

                    @foreach (var item in Model.Place)
                    {
                        <div class="col-md-6 col-sm-6">
                            <article id="post-187" class="mb-post-outer post-187 post type-post status-publish format-standard has-post-thumbnail hentry category-city">
                                <!-- Post Media -->
                                <div class="featured-area media-small">
                                    <figure class="mb-post-media">
                                        <a href="/Blog/index" class="post-thumbnail" title="Coolest things to do in miami beaches 2020"><img width="1000" height="615" src="~/Content/images/@item.Image" class="attachment-destination_post_thumb size-destination_post_thumb wp-post-image" alt="" /></a>
                                    </figure>
                                </div>


                                <!-- End of post Media -->
                                <div class="entry-post">
                                    <!-- Entry post details -->
                                    <div class="mb-post">


                                        <!-- Entry-header -->
                                        <header class="entry-header">

                                            <!-- Title of posts -->
                                            <h2 class="mb-post-title"><a href="/Blog/index" rel="bookmark">@item.Title</a></h2>      <!--End of Title of posts  -->
                                            <div class="md-post-meta">
                                                <span class="time">@item.Date.ToString("dd/MM/yyyy")</span>
                                                <span>
                                                    @for (int i = 0; i < item.AvRate; i++)
                                                    {

                                                        <i class="fa  fa-star text-danger"></i>
                                                    }
                                                    @for (int i = 0; i < 5 - Convert.ToInt32(item.AvRate); i++)
                                                    {
                                                        <i class="fa fa-star text-light"></i>
                                                    }
                                                </span>
                                            </div>

                                        </header><!-- .entry-header -->

                                        <div class="mb-post-container">
                                            <div class="mb-post-content">
                                                <!-- Post excerpt -->

                                                <div class="mb-blog-post-text">
                                                    @if (item.Description.Length > 88)
                                                    {
                                                        @item.Description.Substring(0, 88)
                                                    }
                                                    else
                                                    {
                                                        @item.Description
                                                    }

                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                    <!-- End of entry post details -->
                                </div>
                            </article>
                        </div>
                    }

                </div>
                <br />
